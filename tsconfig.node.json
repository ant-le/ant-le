{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2020",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist" // Not strictly used by ts-node, but good practice
    },
    "ts-node": {
        "esm":true,
        "transpileOnly": true
    },
    "include": ["/static/scripts/fetch_strava.ts"], // Only include the script file
    "exclude": ["node_modules", "src"] // Exclude SvelteKit source files
}
